<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#090909"
    tools:context=".BuscaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BA6600">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:background="#040404"
            android:backgroundTint="#101010"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="666dp" />

        <EditText
            android:id="@+id/etFiltro"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:backgroundTint="#141414"
            android:ems="10"
            android:hint="Filtrar filmes"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listView" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:divider="@color/material_dynamic_neutral20"
            android:dividerHeight="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>